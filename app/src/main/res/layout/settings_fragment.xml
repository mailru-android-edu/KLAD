<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settings.SettingsFragment"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearUser"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <ImageView
                        android:id="@+id/Avatar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitStart"

                        android:layout_marginTop="10dp"
                        android:layout_marginStart="30dp"

                        app:srcCompat="@drawable/movies_24" />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:gravity="center_vertical"

                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp">

                <TextView
                        android:id="@+id/userName"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Удлиннитель"

                        android:textColor="@color/design_default_color_primary"
                        android:textSize="25sp"
                        android:gravity="center_vertical" />

                <TextView
                        android:id="@+id/userPhone"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="8 800 555 35 35"

                        android:textColor="@color/dark_grey"
                        android:textSize="15sp"
                        android:gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Настройки"

                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/card_corner_radius"
                        android:layout_marginTop="@dimen/card_corner_elevation"/>

                <Button
                        android:id="@+id/notfications"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"

                        android:text="Уведомления"

                        android:textColor="@color/dark_grey"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="@dimen/card_corner_elevation"/>


                <Button
                        android:id="@+id/theme"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"

                        android:text="Тема"

                        android:textColor="@color/dark_grey"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="@dimen/card_corner_elevation"/>

                <Button
                        android:id="@+id/clear_statistics"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"

                        android:text="Сбросить всю статистику"

                        android:textColor="@color/dark_grey"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="@dimen/card_corner_elevation"/>

                <Button
                        android:id="@+id/help"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"

                        android:text="Помощь"

                        android:textColor="@color/dark_grey"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="@dimen/card_corner_elevation"/>

                <Button
                        android:id="@+id/language"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"

                        android:text="Язык"

                        android:textColor="@color/dark_grey"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="@dimen/card_corner_elevation"/>

                <Button
                        android:id="@+id/exit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"

                        android:text="Выйти из аккаунта"

                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/card_corner_radius"
                        android:layout_marginTop="@dimen/card_corner_elevation"/>


            </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>